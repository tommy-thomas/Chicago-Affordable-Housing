<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="note"
            type="org.affordablehousing.chi.housingapp.model.Note"/>
        <variable name="callback"
            type="org.affordablehousing.chi.housingapp.ui.NoteClickCallback"/>
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimaryLight"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"

        android:minHeight="@dimen/note_minHeight"
        android:onClick="@{() ->  callback.onClick(note)}"
        android:orientation="horizontal"
        android:padding="8dp"
        app:cardUseCompatPadding="true">
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/note_padding"
                android:textColor="@color/colorAccent"
                android:text="@{note.text}"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>